<launch>
  <arg name="model" default="$(env KUBOT_MODEL)" doc="model type [kubot2, wagv, aider ,neuronbot2 ,galiray2]"/>
  <arg name="lidar" default="$(env KUBOT_LIDAR)" doc="model type [non-lidar, rplidar-a1, rplidar-a2, rplidar-a3, rplidar-s1, eai-x4, eai-g4, xtion, kinectV1, kinectV2, astra, eai-x4, d435i, sick-tim551, hokuyo-123, two-rplidar-a2 ]"/>
  <arg name="sensor" default="$(env KUBOT_3DSENSOR)" doc="model type [non-3dsensor, xtion, astra, kinectV1, kinectV2, d435i]"/>
  <arg name="open_rviz" default="true"/>
  <arg name="open_keyboard" default="true"/>

  <include file="$(find kubot_lidar)/launch/ira_lidar_example.launch"/>

  <include file="$(find kubot_lidar)/launch/lidar_filter.launch"/>

  <include file="$(find kubot_navigation)/launch/include/move_base.launch.xml" />

  <include file="$(find kubot_slam_2d)/launch/gmapping.launch"/>

  <group if="$(arg open_rviz)">
		<node name="rviz" pkg="rviz" type="rviz" args="-d $(find kubot_navigation)/rviz/view_navigation.rviz" />
  </group>

  <group if="$(arg open_keyboard)">
    <include file="$(find kubot_control)/launch/keyboard_teleop.launch"/>
  </group>

</launch>